<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myfirstapp">

    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OculusRiftActivity"
            android:parentActivityName=".ListImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListImageActivity" />
        </activity>
        <activity
            android:name=".OculusRiftGalleryActivity"
            android:parentActivityName=".OculusRiftActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OculusRiftActivity" />
        </activity>
        <activity
            android:name=".ViveActivity"
            android:parentActivityName=".ListImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListImageActivity" />
        </activity>
        <activity
            android:name=".ViveGalleryActivity"
            android:parentActivityName=".ViveActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViveActivity" />
        </activity>
        <activity
            android:name=".GearActivity"
            android:parentActivityName=".ListImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListImageActivity" />
        </activity>
        <activity
            android:name=".GearGalleryActivity"
            android:parentActivityName=".GearActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".GearActivity" />
        </activity>
        <activity
            android:name=".PlaystationActivity"
            android:parentActivityName=".ListImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListImageActivity" />
        </activity>
        <activity
            android:name=".PlaystationGalleryActivity"
            android:parentActivityName=".PlaystationActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".PlaystationActivity" />
        </activity>
        <activity
            android:name=".OdysseyActivity"
            android:parentActivityName=".ListImageActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ListImageActivity" />
        </activity>
        <activity
            android:name=".OdysseyGalleryActivity"
            android:parentActivityName=".OdysseyActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".OdysseyActivity" />
        </activity>
        <activity
            android:name=".ListImageActivity"
            android:launchMode="singleTask"
            android:parentActivityName=".StartActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".StartActivity" />
        </activity>
    </application>

</manifest>